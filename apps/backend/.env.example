# Environment Configuration for Samudra Paket ERP Backend

# Application Environment
NODE_ENV=development # Use 'production' for Railway deployment
APP_VERSION=1.0.0

# Server Configuration
PORT=5000 # Railway will override this in production
API_PREFIX=/api/v1
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/samudra_erp # Railway will provide this in production

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379 # Railway will provide this in production

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here # Use a strong random string in production
JWT_EXPIRATION=86400 # 24 hours in seconds
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here # Use a different strong random string
JWT_REFRESH_EXPIRATION=604800 # 7 days in seconds

# File Storage
# For local development
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads

# For production with AWS S3
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
# AWS_REGION=ap-southeast-1
# AWS_S3_BUCKET=samudra-paket-erp

# Logging
LOG_LEVEL=info # Use 'error' in production
LOG_FORMAT=dev # Use 'combined' in production

# Security
CORS_ORIGIN=* # Restrict in production to specific domains
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# Notification Services
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=no-reply@samudrapaket.com

# SMS_SERVICE=twilio
# SMS_ACCOUNT_SID=your_twilio_account_sid
# SMS_AUTH_TOKEN=your_twilio_auth_token
# SMS_FROM=+1234567890
